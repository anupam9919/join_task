@page
@model task.Pages.Designations.addDesignationModel
@{
}


<div class="d-flex justify-content-around  align-items-center">
    <h1>Add Designation</h1>
    <a class="btn btn-primary" href="/Designations/listDesignation" role="button">All Designation</a>
</div>

@{
    Html.RenderPartialAsync("_Message");
}

<form method="post" class="w-50 container bg-warning rounded p-3">
    <div class="form-group row mt-3">
        @Html.LabelFor(m => m.designationName, "Designation Name", new { @class = "col-sm-2 col-form-label", label = "Designation Name" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.designationName, new { @class = "form-control", placeholder = "Designation Name" })
            @Html.ValidationMessageFor(m => m.designationName)
        </div>
    </div>

    <div class="form-group row mt-3">
        <div class="col-sm-12 d-flex justify-content-center">
            <button type="submit" class="btn btn-primary" onclick="SubmitForm();">Submit</button>
        </div>
    </div>
</form>


@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/jquery.blockui.js"></script>


    <script type="text/javascript">
        function SubmitForm() {
            if ($('#designationName').val()) {
                $.blockUI({ message: '<h1> Just a moment...</h1>' });
            }
        }
    </script>
}