@page
@model task.Pages.Departments.addDeptModel
@{
}

<div class="d-flex justify-content-around  align-items-center">
    <h1>Add Employee</h1>
    <a class="btn btn-primary" href="/departments/deptList" role="button">All Department</a>
</div>

@{
    Html.RenderPartialAsync("_Message");
}

<form method="post" class="w-50 container bg-warning rounded p-3">
    <div class="form-group row mt-3">
        @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Name" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>
    </div>

    <div class="form-group row mt-3">
        @Html.LabelFor(m => m.Description, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control", placeholder = "Description" })
            @Html.ValidationMessageFor(m => m.Description)
        </div>
    </div>

    <div class="form-group row mt-3">
        <div class="col-sm-12 d-flex justify-content-center">
            <button type="submit" class="btn btn-primary" onclick="SubmitForm();">Submit</button>
        </div>
    </div>
</form>


@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/jquery.blockui.js"></script>
}

<script type="text/javascript">
    function SubmitForm() {
        if ($('#Name').val() && $('#Description').val() ) {
            $.blockUI({ message: '<h1> Just a moment...</h1>' });
        }
    }
</script>